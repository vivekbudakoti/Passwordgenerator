<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.decrypt_fragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:text="Enter Text for decryption:-"
            android:textStyle="bold"
            android:padding="20dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"/>

        <EditText
            android:id="@+id/edt_entertxtDE"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Text (Only Charcters)"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:padding="10dp"/>

        <Button
            android:id="@+id/btn_decrypt_generate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:background="@drawable/rounded_corner"
            android:textColor="@color/white"
            android:text="Decrypt"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_margin="10dp">

            <EditText
                android:id="@+id/edt_generated_passDE"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Decrypted Pass"
                android:textSize="30sp"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                />

            <ImageView
                android:id="@+id/img_copyclipDE"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/ic_baseline_content_copy_24"
                android:layout_gravity="center"
                />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Note :- Password can be decrypted only from the same login account you have encrypted!"
            android:textSize="15dp"
            android:padding="25dp"
            />


    </LinearLayout>

</FrameLayout>